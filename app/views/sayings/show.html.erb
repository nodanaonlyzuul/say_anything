<% link_url = "/sayings/#{filename_for(@saying).gsub('wav', 'mp3')}" %>
<div class="row">
  <div class="col-sm"  style="margin-left:15px;">
    <%= form_for @saying do |form| %>
      <div class="form-group">
        <%= form.label :words, "Type Something Here" %>
        <%= form.text_area :words, class: 'form-control' %>
      </div>
      <%= form.submit "Talk!", class: 'btn btn-success' %>
    <% end %>
    <a id="playAgainLink" href="#playAgain">Play Again</a>
    <a id="downloadLink" href="<%= link_url %>" download>Download</a>
  </div>
  <div class="col-sm"></div>
</div>

<script type="text/javascript">
  $(function(){
    var mySound = new buzz.sound("<%= link_url %>");
    mySound.play();

    $('#playAgainLink').click(function (e) {
      e.preventDefault();
      mySound.play();
    })
  })
</script>
