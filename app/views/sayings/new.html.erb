<div class="row">
  <div class="col-sm">
    <%= form_for @saying do |form| %>
      <div class="form-group">
        <%= form.label :words %>
        <%= form.text_area :words, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.select :voice, options_for_select(all_voices.map{|voice| [voice, voice]}), class: 'form-control'
        %>
      </div>
      <%= form.submit class: 'btn' %>
    <% end %>
  </div>
</div>
